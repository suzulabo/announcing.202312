{
  "name": "@announcing/db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./constants": {
      "types": "./dist/constants.d.ts",
      "import": "./dist/constants.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "genWranglerJsonc": "jiti genWranglerJsonc.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "generate": "drizzle-kit generate",
    "migrate:remote": "wrangler d1 migrations apply D1 -c wrangler.remote.jsonc --remote",
    "migrate:local": "wrangler d1 migrations apply D1  -c wrangler.local.jsonc --local --persist-to ../db-local",
    "genTestData": "jiti tools/genTestData.ts"
  },
  "devDependencies": {
    "@announcing/cloudflare-support": "workspace:*",
    "@cloudflare/workers-types": "catalog:",
    "@faker-js/faker": "catalog:",
    "date-fns": "catalog:",
    "drizzle-kit": "catalog:",
    "drizzle-orm": "catalog:",
    "image-size": "catalog:",
    "jdenticon": "catalog:",
    "js-xxhash": "catalog:",
    "miniflare": "catalog:",
    "mockdate": "catalog:",
    "vitest": "catalog:",
    "wrangler": "4.20.0"
  }
}
