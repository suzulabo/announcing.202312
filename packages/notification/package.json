{
  "name": "@announcing/notification",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./workers": {
      "types": "./dist/workers/index.d.ts",
      "import": "./dist/workers/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "postinstall": "jiti postinstall.ts",
    "dev:workers": "wrangler dev -e local --persist-to ../db-local",
    "test": "vitest run",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -w -p tsconfig.build.json",
    "generate": "drizzle-kit generate",
    "migrate:local": "wrangler d1 migrations apply D1_NOTIFICATION -e local --local --persist-to ../db-local",
    "migrate:remote": "wrangler d1 migrations apply D1_NOTIFICATION -e local --remote",
    "deploy": "wrangler deploy"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250429.0",
    "dotenv": "16.5.0",
    "drizzle-kit": "0.31.0",
    "drizzle-orm": "0.42.0",
    "firebase-admin": "13.2.0",
    "miniflare": "4.20250424.0",
    "valibot": "1.0.0",
    "vitest": "3.1.1",
    "wrangler": "4.13.2"
  }
}
