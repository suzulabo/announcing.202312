{
  "name": "announcing",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": "=22.13.0",
    "pnpm": "=9.15.4"
  },
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "lint": "eslint",
    "lint:fix": "pnpm eslint --fix",
    "build": "pnpm -r build",
    "build:cf:writer": "pnpm --filter @announcing/writer^... build && pnpm --filter @announcing/writer build:cf",
    "build:cf:reader": "pnpm --filter @announcing/reader^... build && pnpm --filter @announcing/reader build:cf",
    "check": "pnpm run build && pnpm run lint && pnpm -r run test && pnpm -r run check"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.10.1",
    "eslint": "^9.22.0",
    "typescript": "^5.8.2"
  }
}
